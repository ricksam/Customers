@model RckDatabase.SIS_VER_VERSAO[]
@{
    ViewBag.Title = "Index";
}
<div class="container">
    @if (!string.IsNullOrEmpty(ViewBag.message_success))
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @ViewBag.message_success
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.message_error))
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong> @ViewBag.message_error
        </div>
    }
    <a class="btn btn-new" href="/SIS/Edit"><i class="fa fa-plus-circle"></i>Adicionar</a>
    <div class="table-responsive">
        <table id="tbSIS_VER_VERSAO" class="table">
            <thead>
                <tr>
                    <th>
                        Sistema
                    </th>
                    <th>
                        Solicitante
                    </th>
                    <th>
                        Data
                    </th>
                    <th>
                        Descrição
                    </th>
                    <th>
                        Url
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.VER_SISTEMA
                        </td>
                        <td>
                            @item.VER_SOLICITANTE
                        </td>
                        <td>
                            @item.VER_DATA
                        </td>
                        <td>
                            @item.VER_DESCRICAO
                        </td>
                        <td>
                            @item.VER_URL
                        </td>
                        <td>
                            <a href="/SIS/Edit/@(item.VER_CODIGO)"><i class="fa fa-folder-o"></i>Detalhe</a>
                        </td>
                        <td>
                            <a href="/SIS/Report?min=@(item.VER_CODIGO)&max=@(item.VER_CODIGO)"><i class="fa fa-folder-o">
                            </i>Relatório</a>
                        </td>
                        <td>
                            <a href="/SIS/Remove/@(item.VER_CODIGO)"><i class="fa fa-times"></i>Remover</a>
                        </td>
                    </tr>          
                }
            </tbody>
        </table>
    </div>
</div>
<div class="container">
    <p>
        <form action="/SIS/SendFileToEmail" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <input type="file" name="file">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email" />
        </div>
        <button class="btn btn-default" type="submit">
            Enviar</button>
        </form>
    </p>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbSIS_VER_VERSAO').dataTable({
            "language": {
                "lengthMenu": "Exibir _MENU_ registros por página",
                "sPaginationType": "bootstrap",
                "zeroRecords": "Nenhum registro encontrado",
                "info": "_TOTAL_ registros.",
                "sSearch": "Buscar: ",
                "infoFiltered": "(filtrado de _MAX_ registros no total)",
                "paginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Seguinte",
                    "sLast": "Último"
                }
            }
        });

        $(".dataTables_wrapper select").addClass("form-control");
        $(".dataTables_wrapper input").addClass("form-control");
    });
</script>

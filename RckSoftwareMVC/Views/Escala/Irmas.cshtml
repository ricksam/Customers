@model List<string>
@{
    Layout = null;
    int count = 0;
}

<div class="card" >
    <div class="card-body">
        <h5 class="card-title">Irmãs</h5>
        <div class="row">
            @foreach (var item in Model)
            {
                count++;
                if (string.IsNullOrEmpty(item)) { continue; }

            <div class="col-sm-6 col-md-6 form-group">
                <input type="hidden" name="Nomes" value="@item" />
                <div class="input-group">
                    <span class="form-control">@count - @item</span>
                    <button type="button" class="btn btn-danger" onclick="RemoveIrma('@item')">X</button>
                </div>
            </div>
                
            }
        </div>

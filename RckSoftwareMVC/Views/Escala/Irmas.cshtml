        <div class="input-group">
            <input id="novo_nome" type="text" class="form-control" name="Nomes" value="" onkeypress="return NomeKeyPress(event)" autofocus />
            <button type="button" class="btn btn-primary" onclick="AddIrma()">+</button>
        </div>
        
    </div>
</div>

<script>
    function AddIrma() {
        rsp.post("#Irmas", "/Escala/Irmas", function (res) {
            $("#Irmas").html(res);
            $("#novo_nome").focus();
        });
    }

    function RemoveIrma(nome) {
        rsp.post("#Irmas", "/Escala/RemoveIrma/"+nome, "#Irmas");
    }

    function NomeKeyPress(e) {
        if (e.keyCode == 13) {
            AddIrma();
            return false;
        }
    }
</script>

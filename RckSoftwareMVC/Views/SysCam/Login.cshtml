@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        
        <div class="col-md-6 offset-md-3">

            <div class="card">
                <div class="card-body">

                    <form action="/SysCam/Login" method="post">
                        <h2>Login</h2>
                        <div class="form-group">
                            <label>Login</label>
                            <input class="form-control" name="Login" type="text" />
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input class="form-control" name="Senha" type="password" />
                        </div>

                        <button class="btn btn-primary">Entrar</button>
                    </form>

                    
                </div>
            </div>

            

        </div>
    </div>
</div>





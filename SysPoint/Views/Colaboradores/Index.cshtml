@model List<SysPoint.Models.Colaboradores>
@{
    ViewBag.Title = "Colaboradores";
    Layout = "~/Views/Shared/_LayoutNav.cshtml";
}
<div class="container">
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Código Acesso</th>
                <th>Empresa</th>
                <th>Supervisor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Senha</td>
                    <td>@(item.Empresa != null ? item.Empresa.Nome : "")</td>
                    <td>@(item.Supervisor != null ? item.Supervisor.Nome : "")</td>
                    <td>
                        <a class="btn btn-info" href="/Colaboradores/Edit/@(item.Id)"><i class="fa fa-pencil"></i></a>
                        <a class="btn btn-danger" href="/Colaboradores/Delete/@(item.Id)"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="row">
        <div class="col-md-3">
            <a href="/Colaboradores/Edit/0" class="btn btn-info">
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
</div>

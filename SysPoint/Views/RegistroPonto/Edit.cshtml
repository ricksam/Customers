@model SysPoint.Models.RegistroPonto
@{
    ViewBag.Title = "RegistroPonto";
    Layout = "~/Views/Shared/_LayoutNav.cshtml";
}


<div class="container">
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>

    <form action="/RegistroPonto/Edit" method="post">
        <input type="hidden" name="Id" value="@(Model.Id)" />

        <div class="form-group">
            <label class="col-sm-2">Id_Colaborador</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="Id_Colaborador" value="@(Model.Id_Colaborador)" /></div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">Foto</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="Foto" value="@(Model.Foto)" /></div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">Registro</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="Registro" value="@(Model.Registro)" /></div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">Latitude</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="Latitude" value="@(Model.Latitude)" /></div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">Longitude</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="Longitude" value="@(Model.Longitude)" /></div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary" type="submit">Gravar</button>
                <a href="/RegistroPonto/List" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>

